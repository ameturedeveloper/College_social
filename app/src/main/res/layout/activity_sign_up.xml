<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="130dp"
        android:fontFamily="@font/pacificoregular"
        android:text="Signup"
        android:textSize="43dp"></TextView>

    <androidx.cardview.widget.CardView
       android:layout_marginTop="140dp"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardCornerRadius="35dp"
       android:background="@color/colorDGrey">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/colorGrey">

           <TextView
               android:id="@+id/Nametv"
               android:layout_width="100dp"
               android:layout_height="50dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="25dp"
               android:fontFamily="@font/pacificoregular"
               android:text="Name"
               android:textSize="30dp">

           </TextView>

           <EditText
               android:id="@+id/signup_fullname"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:background="@drawable/edt_bg"
               android:layout_below="@id/Nametv"
               android:padding="10dp"
               android:hint="Enter your Full name"
               android:inputType="text"
               android:textSize="18sp"
         />

           <TextView
               android:id="@+id/Unametv"
               android:layout_width="wrap_content"
               android:layout_height="50dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="15dp"
               android:layout_below="@id/signup_fullname"
               android:fontFamily="@font/pacificoregular"
               android:text="Username"
               android:textSize="30dp">

           </TextView>

           <EditText
               android:id="@+id/signup_username"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/Unametv"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:background="@drawable/edt_bg"
               android:hint="Enter Username"
               android:inputType="text"
               android:textSize="18sp"
            />

           <TextView
               android:id="@+id/Emailltv"
               android:layout_width="100dp"
               android:layout_height="50dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="15dp"
               android:layout_below="@id/signup_username"
               android:fontFamily="@font/pacificoregular"
               android:text="Email"
               android:textSize="30dp">

           </TextView>

           <EditText
               android:id="@+id/signup_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/Emailltv"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:hint="Enter Email"
               android:background="@drawable/edt_bg"
               android:inputType="textEmailAddress"
               android:textSize="18sp"
            />

           <TextView
               android:id="@+id/passtv"
               android:layout_width="155dp"
               android:layout_height="50dp"
               android:layout_marginLeft="18dp"
               android:layout_marginTop="15dp"
               android:layout_below="@id/signup_email"
               android:fontFamily="@font/pacificoregular"
               android:text="Password"
               android:textSize="30dp">

           </TextView>

           <EditText
               android:id="@+id/signup_password"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@id/passtv"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:padding="10dp"
               android:hint="Password"
               android:inputType="textPassword"
               android:background="@drawable/edt_bg"
               android:textSize="18sp"
               />

           <Button
               android:id="@+id/signup_btn"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:text="Sign Up"
               android:background="@drawable/inputs_background"
               android:textAllCaps="false"
               android:layout_marginTop="35dp"
               android:textSize="15sp"
               android:textColor="@color/colorGrey"
               android:textStyle="normal"
               android:layout_below="@id/signup_password"
               />

           <TextView
               android:id="@+id/login_link"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/signup_btn"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="30dp"
               android:text="Already have an account? Login"
               android:textAllCaps="false"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="14sp"
               android:textStyle="normal" />

       </RelativeLayout>


   </androidx.cardview.widget.CardView>


</RelativeLayout>